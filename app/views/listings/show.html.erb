<div id="photos">
  <div class="header-image" style="background-image: url(<%= @listing.header_image.to_s %>);">
    <% if current_user == @listing.user %>
      <div>
        <%= link_to "Edit Listing", edit_listing_path(@listing), class: "button left", style:"background-color: rgba(60,63,64,0.8);"  %>
        <%= link_to "Delete Listing", listing_path(@listing), method: "delete", class: "button left", style:"background-color: rgba(60,63,64,0.8);"  %>
      </div>
    <% end %>
  </div>
</div>
<div class="row collapse">
  <div class="small-12 medium-4 large-4 columns">
    <%= render "listings/info_table" %>
  </div>
  <div class="small-4-centered medium-8 large-8 columns">
    <div id="map-canvas" class="info-right" style="height: 300px; border: solid 1px #dddddd;"></div>
  </div>
</div>
<div class="row collapse">
  <div class="small-12 columns">
    <%= render "listings/amenities" %>
  </div>
</div>
<div class="row">
  <%= render "listings/reviews" %>
</div>

<script type="text/javascript" charset="utf-8">
  var addresses = <%= @location %>;
  var searchCity = "<%= @listing.full_address %>";
</script>
