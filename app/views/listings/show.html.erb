<div id="photos">
  <div class="header-image" style="background-image: url(<%= @listing.header_image.to_s %>);">
    <% if current_user == @listing.user %>
      <div>
        <%= link_to "Edit Listing", edit_listing_path, class: "button radius left", style:"background-color: rgba(60,63,64,0.8);"  %>
        <%= link_to "Delete Listing", listing_path(@listing), method: "delete", class: "button radius left", style:"background-color: rgba(60,63,64,0.8);"  %>
      </div>
    <% end %>
  </div>
</div>
  <div class="row collapse">
    <div class="small-4 medi um-4 large-4 columns">
      <ul class="pricing-table info-left" style="border:none;">

        <li id="price" style="font-size:1.7em"><span class="left">$<%= @listing.weekly_rate %></span><span class="right">per week</span></li>
        <li class="title" style="font-size:2em"><%= @listing.title %></li>
        <li class="bullet-item">
          <%= @listing.address %><br>
          <%= @listing.city %>, <%= @listing.state %>
          <%= @listing.zip_code %>
        </li>
        <% unless @listing.description == "" %>
          <li class="description"><%= @listing.description %></li>
        <% end %>
        <li class="cta-button">
          <div class="button expand radius" id="reservation">
            Reserve This Space
          </div>
          <%= link_to "Leave a Review", new_listing_review_path(@listing), class: "button radius" unless current_user == @listing.user %></li>
        <div class="reservation-form"><%= render "reservations/form" %></div>
      </ul>
    </div>
    <div class="small-8 medium-8 large-8 columns">
      <div id="map-canvas" class="info-right" style="height: 300px; border: solid 1px #dddddd;"></div>
    </div>
  </div>
    <h4 class="text-center">Reviews for <%= @listing.title %></h4>
    <% @listing.reviews.each do |review| %>
      <div class="row">
        <div class="large-2 columns">
          <%= image_tag review.user.gravatar_url %><br>
          <%= review.user.email %>
        </div>
        <div class="large-4 columns">
          <h4 class="">Rating: <%= review.rating %></h4>
          <br>
          <p>
            Review: <%= review.comment %>
          </p>
        </div>
      </div>
    <% end %>


    <script type="text/javascript" charset="utf-8">
      var addresses = <%= @location %>;
    </script>
