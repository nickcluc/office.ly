<div class="medium-8 large-7 columns" id="map-fill">
  <div class="hidden-for-small-only" id="map-container">
    <div class="index-map" id="map-canvas"></div>
  </div>
</div>
<div class="medium-4 large-5 columns">
  <% if @listings == [] %>
    <h1 class="text-center">No Listings available</h1>
    <h4 class="text-center">for <%= @query %></h4>
    <h4 class="text-center">Please try another search!</h4>

  <% else %>
    <h1 class="text-center">Listings for <%= @query %></h1>
  <% end %>
  <div class="row">
    <ul class="no-bullet">
      <% @listings.each do |listing| %>
        <div class="row">
          <li class="listing">
            <div class="left listing-text">
              <%= link_to listing.title, listing_path(listing) %><br>
              <%= listing.address %><br>
              <%= listing.city %> <%= listing.zip_code %><br>
              Rate from: $<%= listing.weekly_rate %>/week
            </div>
            <% if listing.header_image %>
              <div class="right listing-image">
                <%= image_tag(listing.header_image, size: "150") unless listing.header_image == nil %>
              </div>
            <% end %>
          </li>
        </div>
        <br>
      <% end %>
    </ul>
  </div>
</div>

<script type="text/javascript" charset="utf-8">
  var addresses = <%= @locations %>;
  var searchCity = "<%= @query %>";
</script>
