<ul class="pricing-table">
  <li class="text-center title">Reviews for <%= @listing.title %></li>
</ul>
<% @listing.reviews.each do |review| %>
  <div class="row">
    <div class="large-2 columns">
      <%= image_tag review.user.gravatar_url %><br>
      <%= review.user.email %>
    </div>
    <div class="large-4 columns">
      <h4 class="">Overall Rating: <%= review.overall_rating %></h4>
      <br>
      <p>
        Location Rating: <%= review.try(:location_rating) %><br>
        Company Rating: <%= review.try(:company_rating) %><br>
        Cleanliness Rating: <%= review.try(:cleanliness_rating) %><br>
        Amenities Rating: <%= review.try(:amenities_rating) %><br>
      </p>
      <p>
        Review: <%= review.comment %>
      </p>
    </div>
  </div>
<% end %>
