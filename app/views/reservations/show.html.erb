<div class="col-md-6 col-md-offset-3">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1 class="text-center">Reservation for <%= @reservation.listing.title %></h1>
      </div>

      <h4>Reservation Start Date: <%= @reservation.start_date.strftime("%A %B %e %Y") %></h4>
      <h4>Reservation End Date: <%= @reservation.end_date.strftime("%A %B %e %Y") %></h4>

      <p>
        Reserved By: <%= @reservation.user.email %><br>
        <br>
        Total Cost: $<%= @reservation.total_cost %>
      </p>
      <p>
        Located At: <%= @reservation.listing.full_address %>
      </p>

    </div>
  </div>
</div>
