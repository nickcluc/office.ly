<!DOCTYPE html>
<html>
<head>
  <title>Office.ly</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Oswald">
  <script type="text/javascript"
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBOmo37fkORiOIHJHCfZUFKZvKSxFWtf58">
  </script>
</head>
<body>
  <nav class="top-bar" data-topbar="" role="navigation" id="nav-bar">
    <!-- Title -->
    <ul class="title-area">
      <li class="name"><h1><a href="/"><%= image_tag "https://s3.amazonaws.com/officely-production/logo-white.png", size:"45" %></a></h1></li>

      <!-- Mobile Menu Toggle -->
      <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
    </ul>

    <!-- Top Bar Section -->

    <section class="top-bar-section">

      <!-- Top Bar Left Nav Elements -->
      <ul class="left">

        <!-- Search | has-form wrapper -->
        <% unless current_page?(root_path) %>
          <li class="has-form">
            <%= form_tag listings_path, method: :get do %>
              <div class="row collapse">
                <div class="small-8 columns">
                  <%= text_field_tag :query, nil, placeholder: "Search Locations" %>
                </div>
                <div class="small-4 columns">
                  <%= submit_tag "Search", { class: "button alert expand" } %>
                </div>
              </div>
            <% end %>
          </li>
        <% end %>
      </ul>


      <!-- Top Bar Right Nav Elements -->
      <ul class="right">
        <!-- Divider -->
        <li class="divider"></li>

        <!-- Anchor -->
        <% if current_user %>
        <li><%= avatar(45) %></li>
        <li class="divider"></li>
        <li><%= link_to 'List Your Space', new_listing_path %></li>
        <li class="divider"></li>
        <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
        <% else %>
        <li><%= link_to 'Sign Up', new_user_registration_path %></li>
        <li class="divider"></li>
        <li><%= link_to 'Sign In', new_user_session_path %></li>
        <% end %>
        <li class="divider"></li>
      </ul>
    </section>
  </nav>



  <%- flash.each do |key, value| -%>
    <div class="flash flash-<%= key %>">
      <%= value %>
    </div>
  <%- end -%>

  <%= yield %>

  <%= javascript_include_tag 'application' %>

  <%= yield :extra_footer %>

</body>
</html>
