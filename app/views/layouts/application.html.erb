<!DOCTYPE html>
<html>
<head>
  <title>Office.ly</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Oswald">
  <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet"></link>
  <script type="text/javascript"
    src="https://maps.googleapis.com/maps/api/js?key=#{env[GOOGLE_MAPS_API_KEY]}">
  </script>
  <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?libraries=places"></script>
</head>
<body>
  <nav class="top-bar" data-topbar="" role="navigation" id="nav-bar">
    <!-- Title -->
    <ul class="title-area">
      <li class="name"><h1><a href="/"><%= image_tag "https://s3.amazonaws.com/officely-production/logo-white.png", size:"45" %></a></h1></li>

      <!-- Mobile Menu Toggle -->
      <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
    </ul>

    <!-- Top Bar Section -->



      <!-- Top Bar Right Nav Elements -->
      <div class="hide-for-small">
        <section class="top-bar-section">

          <!-- Top Bar Left Nav Elements -->
          <ul class="left">

            <!-- Search | has-form wrapper -->
            <% unless current_page?(root_path) %>
              <li class="has-form">
                <%= form_tag listings_path, method: :get do %>
                  <div class="row collapse">
                    <div class="small-8 columns">
                      <%= text_field_tag :query, nil, placeholder: "Search Locations",  id: "searchbox" %>
                    </div>
                    <div class="small-4 columns">
                      <%= submit_tag "Search", { class: "button alert expand" } %>
                    </div>
                  </div>
                <% end %>
              </li>
            <% end %>
          </ul>

          <ul class="right">
            <!-- Divider -->
            <li>
              <% flash.each do |type, value| %>
              <div data-alert class="flash <%= type %> alert-box">
                <p><%= value %></p>
              </div>
              <% end %>
            </li>
            <li class="divider"></li>

            <!-- Anchor -->
            <% if current_user %>
            <li><%= avatar(45) %></li>
            <li class="divider"></li>
            <li><%= link_to 'List Your Space', new_listing_path %></li>
            <li class="divider"></li>
            <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
            <% else %>
            <li><%= link_to 'Sign Up', new_user_registration_path %></li>
            <li class="divider"></li>
            <li><%= link_to 'Sign In', new_user_session_path %></li>
            <% end %>
            <li class="divider"></li>
          </ul>
        </section>
      </div>
  </nav>




  <%= yield %>

  <footer class="row">
    <div class="row">
      <div class="divider">

      </div>
      <div class="large-8 columns">
        <p>Â© Nicholas Clucas</p>
      </div>
      <div class="large-4 columns">
        <ul class="inline-list right">
          <li><a class="fa fa-linkedin-square" href="https://linkedin.com/in/nickclucas"></a></li>
          <li><a class="fa fa-github-square" href="https://github.com/nickcluc"></a></li>
          <li><a class="fa fa-twitter-square" href="https://twitter.com/nickcluc"></a></li>
        </ul>
      </div>
    </div>
  </div>
</footer>

  <%= javascript_include_tag 'application' %>

  <%= yield :extra_footer %>

</body>
</html>
